# .editorconfig para aplicación PHP con Composer en VS Code

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Archivos PHP
[*.php]
indent_style = space
indent_size = 4

# Archivos JSON (ej. composer.json, package.json)
[*.json]
indent_style = space
indent_size = 2

# Archivos YAML (ej. configuración de CI/CD o Symfony)
[*.yml]
indent_style = space
indent_size = 2

# Archivos Markdown
[*.md]
trim_trailing_whitespace = false

# Archivos Makefile requieren tabs
[Makefile]
indent_style = tab

# Archivos CSS
[*.css]
indent_style = space
indent_size = 2

# Archivos JavaScript
[*.js]
indent_style = space
indent_size = 2

# Archivos TypeScript
[*.ts]
indent_style = space
indent_size = 2

# Archivos SCSS
[*.scss]
indent_style = space
indent_size = 2
